.supplemental
  position absolute
  right 15px
  top 8px
  .secteno
  .ucast
    width 100%
    position relative
    padding-bottom 5px
  .ucast
    margin-top 16px
  h3
    font-weight normal
    text-transform lowercase
    font-variant small-caps
    text-align center
    margin 0px

  .value
    display block
    width 100%
    font-size 2em
    text-align center
    padding 8px 0px

  .progress
    width 100%
    height 4px
    border-radius 1px
    background ColorGreyBg
    border 1px solid darken(ColorGreyBg, 7%)
    position absolute
    bottom 0px
    .fill
      position absolute
      top 0px
      left 0px
      background ColorHeading
      border 1px solid darken(ColorHeading, 20%)
      min-width 2px
      height @height
