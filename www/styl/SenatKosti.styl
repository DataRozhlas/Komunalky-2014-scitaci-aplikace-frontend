.senatKosti
  position relative
  height 350px
  img
    width 100%
    padding-right 140px
    margin-top 40px
    position relative
    z-index 2
    opacity 0.5
  h2
    position absolute
    top 5px
  .kosti
    position absolute
    padding-right 130px
    width 100%
    height 290px
    z-index 3
    .kost
      position absolute
      width 24px
      height 24px
      background #aaa
      margin-left -12px
      margin-top -12px
      border-radius 2px
      overflow hidden
      .first
      .second
        position absolute
        top 0px
        width 50%
        height 100%
      .first
        left 0px
      .second
        right 0px
      &.decided
        .first
          width 100%
        .second
          display none
