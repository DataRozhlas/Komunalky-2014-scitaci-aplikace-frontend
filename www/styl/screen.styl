@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
  @import Pekac
  @import SenatKosti
  @import Obec
  @import Supplemental
  @import Suggester
  @import Layout

.ig
  width 100%
  height 100%
  overflow hidden
  position absolute
  h2
    font-size 24px
    color #036
    margin 0px
  a.closebtn
    position absolute
    top 12px
    left 12px
    width 40px
    height 40px
    border 3px solid ColorHeadingLink
    border-radius 50%
    background white
    overflow hidden
    svg
      position absolute
      top -2px
      left -2px
      width @width
      height @height
      path
        fill ColorHeadingLink
    &:hover
      background lighten(ColorHeadingLink, 90%)
      cursor pointer
    &:active
      background ColorHeadingLink
      svg
        path
          fill white
