.obec
  .headings
    margin-left 68px
    margin-top 13px
  h3.okres
    color #444
    font-style italic
    font-weight normal
    font-size 14px
    margin 6px 0px
  h3
    color ColorHeading
    float left
    clear left
    margin 10px 0px 0px 0px
  .typ
    opacity 1
    transition opacity 0.6s, top 0.6s
    position absolute
    &.deactivating
      opacity 0
  .kostiCont
    margin-top 35px
    position relative
    .kosti
      position relative
      float left
      clear left
      width 100%
      margin-top 14px
      transition height 0.6s
      .kost
        position absolute
        width 20px
        height 20px
        border-radius 2px
        margin-right 8px
        margin-bottom 8px
        background #aaa
        transition background 0.6s, transform 0.6s
        transform scale(1)
        &.changed
          transform rotate(90deg)
        &.deactivating
          transform scale(0)
        &.activating
          transform scale(0)
  .map-container
    position absolute
    bottom 0px
    width 100%
    height 290px
    h3
      position absolute
      top -43px
    .map
      position absolute
      width 100%
      height 100%
      bottom 0px
  .senat-container
    position absolute
    margin-top 70px
    width 100%
