.pekac
  width 100%
  height 600px
  .bars
    position absolute
    top 0px
    left 0px
    width 100%
    height 600px
    overflow hidden
    .pager
      background red
      position absolute
      top 0px
      left 0px
      height 100%
      transition left 0.8s
    .bar
      position absolute
      left 0px
      width 50px
      height 100%
      background yellow
      .name
        display block
      .result
        display block
