.pekac
  width 100%
  height 390px
  h2
    position absolute
    top 5px
  .bars
    position absolute
    top 0px
    left 0px
    width 100%
    height @height
    overflow hidden
    .pager
      position absolute
      top 0px
      left 0px
      height (@height - 90px)
      transition left 0.8s
    .bar
      position absolute
      left 0px
      width 50px
      height 100%
      .texts
        position absolute
        width 100%
        top 305px
      .name
        display block
        text-align center
        overflow hidden
      .result
        display block
        text-align center
      .barArea
        position absolute
        bottom 0px
        left 0px
        width 50px
        background #aaa

  .paginator
    position absolute
    top 180px
    opacity 0.7
    transition opacity 0.2s
    &:hover
      right 15px
      opacity 1
      cursor pointer
    &.next
      right 15px
      triangle(30px, 50px, 'right', ColorHeading)
    &.prev
      left 15px
      triangle(30px, 50px, 'left', ColorHeading)
    &.disabled
      opacity 0
    &.removed
      display none

